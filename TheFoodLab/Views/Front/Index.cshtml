    <section class="home-banner-area relative">
        <div class="container">
            <div class="row fullscreen d-flex align-items-center justify-content-center">
                <div class="banner-content col-lg-8 col-md-12">
                    <h1 class="wow fadeIn" data-wow-duration="4s">Ingresá tus ingredientes <br> y descubrí que recetas podés hacer</h1>
                    <div class="input-wrap">
                        @if (@ViewBag.Error != null)
                        {
                            <h6 class="genric-btn danger">@ViewBag.Error</h6>
                        }
                        @using TheFoodLab.Models;
                        @model Ingredientes
                        @using (Html.BeginForm("AgregarIngrediente", "Front", FormMethod.Post))
                        {
                            @Html.TextBoxFor(model => model.Nombre) @Html.ValidationMessageFor(model => model.Nombre)<br />
                            <div class="py-3">
                                <input type="submit" value="Enviar" class="btn" />
                            </div>
                        }
                    </div>
                    <div>
                        @if (ViewBag.ListaIngredientes.Count > 0)
                        {
                            <h4 class="text-white">Ingredientes</h4>
                            <div>
                                @foreach (Ingredientes Ingre in ViewBag.ListaIngredientes)
                                {
                                <div>
                                    <a href="@Url.Action("EliminarUnIngredienteABuscar", "Front", new { idIngrediente = Ingre.IdIngrediente })"><h6 data-wow-duration="1s" data-wow-delay=".3s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">@Ingre.Nombre</h6></a>
                                </div>
                                }
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
