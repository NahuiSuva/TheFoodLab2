
@{
    ViewBag.Title = "Registrarse";
}

<head>
</head>
<body>
    <div class="pl-30">
        @{
            ViewBag.Title = "Registrarse";
        }
        @using TheFoodLab.Models;
        @model Receteros
        @using (Html.BeginForm("Grabar", "Front", FormMethod.Post))
        {

            <h4 style="padding-top:50px; color:red;">@ViewBag.Error</h4>
            <br />
            <p>Nombre:</p> @Html.TextBoxFor(model => model.Nombre1) @Html.ValidationMessageFor(model => model.Nombre1)<br />
            <p>Apellido:</p> @Html.TextBoxFor(model => model.Apellido1) @Html.ValidationMessageFor(model => model.Apellido1)<br />
            <p>Descripcion:</p> @Html.TextBoxFor(model => model.Descripcion1) @Html.ValidationMessageFor(model => model.Descripcion1)<br />
            <p style="padding-top:20px;">Imagen:</p> @Html.TextBoxFor(model => model.Foto1, new { Type = "File" }) @Html.ValidationMessageFor(model => model.Foto1) <br />
            <p>Edad:</p> @Html.TextBoxFor(model => model.Edad1) @Html.ValidationMessageFor(model => model.Edad1)<br />
            <p>Email:</p> @Html.TextBoxFor(model => model.Email1) @Html.ValidationMessageFor(model => model.Email1)<br />
            <p>Username:</p> @Html.TextBoxFor(model => model.Username1) @Html.ValidationMessageFor(model => model.Username1)<br />
            <p style="padding-top:20px;">Password:</p> @Html.PasswordFor(model => model.Password1) @Html.ValidationMessageFor(model => model.Password1) <br />
            <div class="py-3">
                <input type="submit" value="Enviar" class="btn" />
            </div>
        }
    </div>
</body>

